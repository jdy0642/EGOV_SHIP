<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ship.web.usr.UserMapper">

	<select id="createUser" parameterType="map">
		${CREATE_USER}
	</select>
	<select id="createRes" parameterType="map">
		${CREATE_RES}
	</select>
	<select id="createDB" parameterType="hashmap">
		${CREATE_DB}
	</select>
	<select id="dropUser" parameterType="map">
		${DROP_USER}
	</select>

    <select id="selectUserByIdPw" resultType="User" parameterType="User" >
        SELECT USER_ID uid , USER_PW upw, USER_NAME uname
        FROM USER 
        WHERE USER_ID LIKE #{uid} AND USER_PW LIKE #{upw}
    </select>
    
    <insert id="insertUser" parameterType="User" >
        INSERT INTO USER (USER_ID, USER_PW, USER_NAME) VALUES (
            #{uid}, #{upw}, #{uname}
        )
    </insert>
  
 	<select id="existId" resultType="Integer" parameterType="String" >
          SELECT COUNT(*)
			FROM USER
			WHERE USER_ID LIKE #{uid} 
    </select>
 	<select id="countUsers" resultType="Integer"  >
          SELECT COUNT(*)
			FROM USER
    </select>
	
	<select id="createLolTable" parameterType="hashmap">
		${CREATE_LOL}
	</select>
	<select id="createReportTable" parameterType="hashmap">
		${CREATE_REPORT}
	</select>
	
</mapper>